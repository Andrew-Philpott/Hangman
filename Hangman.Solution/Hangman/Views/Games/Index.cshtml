@using Hangman.Models;

@{
  Layout = "_Layout";
}

@if (@Model.Count == 0) {
  <h1>Let's get started</h1>
  <h2><a href="/game/new">Create a hangman game!</a></h2>
}
<h1>Your hangman games</h1>
<ul>
@foreach(Game game in @Model) {
   <li><a href='/games/@game.Id/show'>Game: @game.Id</a></li>
}
</ul>




